generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TransactionCache {
  id        String   @id @default(uuid())
  sender    String
  receiver  String
  amount    Float
  currency  String
  cause     String?
  createdAt DateTime
  cachedAt  DateTime @default(now())
}
